{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Response Sequence",
  "description": "A sequence of responses (e.g., responsory, versicle) possibly hierarchical.",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "A short unique identifier to be referenced." },
    "title": { "type": "string", "description": "Title of the response sequence." },
    "description": { "type": "string", "description": "Optional description for the sequence." },
    "kind": {
      "type": "string",
      "description": "Kind of response sequence.",
      "enum": ["RESPONSORY", "VERSICLE", "BENEDICTION", "DISMISSAL", "OTHER"],
      "default": "OTHER"
    },
    "parentId": { "type": "string", "description": "Optional parent sequence ID." }
  },
  "required": ["id", "title", "kind"],
  "additionalProperties": false
}
