{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Text Source",
  "description": "A bibliographic text source (scripture, patristic, conciliar, etc.).",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "A short unique identifier to be referenced." },
    "code": { "type": "string", "description": "Unique code for the source (e.g., 'VULG')." },
    "title": { "type": "string", "description": "Title of the source." },
    "author": { "type": "string", "description": "Optional author or editor." },
    "language": { "type": "string", "description": "ISO language code (e.g., 'la', 'en')." },
    "category": {
      "type": "string",
      "description": "Optional category (Scripture, Patristic, etc.)."
    },
    "description": { "type": "string", "description": "Optional description of the source." }
  },
  "required": ["id", "code", "title", "language"],
  "additionalProperties": false
}
